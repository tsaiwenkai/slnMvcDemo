@model prjMvcDemo.tProduct

@{
    ViewBag.Title = "AddToSession";
}

<h2>AddToSession</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>tProduct</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="txtFid" value="@Model.fId" />


        <div class="form-group">
            數量<br />
            <div class="col-md-10">
                @Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })
           
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="加入購物車" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回購物", "List")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

