@model prjMvcDemo.Models.CCustomer
@{
    ViewBag.Title = "Edit";
}

<h2>修改客戶資料</h2>

<form method="post" >
    <div>
        <input name="fId" type="text" value="@Model.fId" />
        姓名:<br />
        <input name="fName" type="text" value="@Model.fName" />
    </div>
    <div>
        電話:<br />
        <input name="fPhone" type="text" value="@Model.fPhone"/>
    </div>
    <div>
        電子郵件:<br />
        <input name="fEmail" type="text" value="@Model.fEmail" />
    </div>
    <div>
        地址:<br />
        <input name="fAddress" type="text"  value="@Model.fAddress"/>
    </div>
    <div>
        密碼:<br />
        <input name="fPassword" type="text"   value="@Model.fPassword"/>
    </div>
    <div>
        <input type="submit" value="送出" />
    </div>
</form>
