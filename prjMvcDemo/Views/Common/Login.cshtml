@model prjMvcDemo.tProduct
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" >
    <h4>tProduct</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    


    <div class="form-group">
        帳號(使用一開始登入的電信箱)<br />
        <div class="col-md-10">
            @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        密碼()<br />
        <div class="col-md-10">
            @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            <input type="submit" value="登入" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("註冊會員", "Login")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
